#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

const int MIN_NUMBER = 1;
const int MAX_NUMBER = 8;
int image_number = 1;  // Global variable

// Function to advance the current number by one
int forward(int current_number) {
    if (current_number < MAX_NUMBER) {
        return current_number + 1;
    } else {
        return MIN_NUMBER;
    }
}

// Function to move the current number backward by one
int backward(int current_number) {
    if (current_number > MIN_NUMBER) {
        return current_number - 1;
    } else {
        return MIN_NUMBER;
    }
}

// Function to create a file name based on the current number
string createFileName(int current_number) {
    return "picture" + to_string(current_number) + ".gif";
}

// Function to create a random file name
string createRandomName() {
    int random_number = rand() % (MAX_NUMBER - MIN_NUMBER + 1) + MIN_NUMBER;
    return "picture" + to_string(random_number) + ".gif";
}

// Function to display the menu and handle user input
void showMenu() {
    int choice;
    do {
        cout << "\nMenu: \n";
        cout << "1. Forward\n";
        cout << "2. Backward\n";
        cout << "3. Create File Name\n";
        cout << "4. Create Random Name\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                image_number = forward(image_number);
                cout << "New image number: " << image_number << endl;
                break;
            case 2:
                image_number = backward(image_number);
                cout << "New image number: " << image_number << endl;
                break;
            case 3:
                cout << "File Name: " << createFileName(image_number) << endl;
                break;
            case 4:
                cout << "Random File Name: " << createRandomName() << endl;
                break;
            case 5:
                cout << "Exiting...\n";
                break;
            default:
                cout << "Invalid choice, please try again.\n";
        }
    } while (choice != 5);
}

int main() {
    srand(time(0));  // Seed the random number generator
    showMenu();
    return 0;
}
