#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    srand(time(NULL));  // Set random seed based on time
    int randomValue = rand() % 100 + 1;  // Generate random number between 1 and 100
    int guess;
    int totalGuesses = 0;
    int smallerGuesses = 0;
    int largerGuesses = 0;
    bool correctGuess = false;

    cout << "Guess the number I'm thinking of, from 1-100: ";

    while (!correctGuess) {
        cin >> guess;

        // Check if user wants to quit
        if (guess == -1) {
            cout << "You gave up!" << endl;
            break;
        }

        // Increase the total guesses count
        totalGuesses++;

        // Check if the guess is too low or too high
        if (guess < randomValue) {
            cout << "Your guess is smaller than the random value. Next guess: ";
            smallerGuesses++;
        }
        else if (guess > randomValue) {
            cout << "Your guess is larger than the random value. Next guess: ";
            largerGuesses++;
        }
        else {
            cout << "You've guessed correct!" << endl;
            correctGuess = true;
        }
    }

    // If the user guessed correctly, display the stats
    if (correctGuess) {
        cout << "Total number of guesses: " << totalGuesses << endl;
        cout << "Smaller Guesses: " << smallerGuesses << endl;
        cout << "Larger Guesses: " << largerGuesses << endl;
    }

    return 0;
}
